<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EEEA"
    tools:context=".view.loginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewctesp"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewctestpa"
        app:layout_constraintEnd_toStartOf="@+id/cardViewlicen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewctesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="São formações com duração de 2 anos, que incluem um semestre letivo de estágio numa empresa."
            android:textAlignment="center"
            android:layout_margin="10dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewlicen"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewctestpa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardViewctesp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="São cursos de Nível 6 do Quadro Nacional de Qualificações. Conferem o grau académico de Licenciado"
            android:textAlignment="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewctestpa"
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="233dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewctesp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:text="Para se candidatar a um curso específico na instituição, os estudantes nacionais e estrangeiros devem cumprir os seguintes requisitos:\n
           -Ter a aprovação num curso do ensino secundário ou equivalente;\n
           -Realizar as provas de ingresso exigidas pelo curso da instituição e obter uma pontuação igual ou superior à pontuação mínima estabelecida;\n
           -Cumprir com os pré-requisitos, caso sejam exigidos pelo curso;\n
           -Ter uma nota de candidatura igual ou superior ao valor mínimo estipulado pela instituição de ensino superior."
            android:textAlignment="center" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="20dp"
        android:text="@string/Licenciaturas"
        app:layout_constraintBottom_toTopOf="@+id/cardViewctesp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewctesp"
        app:layout_constraintStart_toStartOf="@+id/cardViewctesp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="20dp"
        android:text="Quem se pode candidatar?"
        app:layout_constraintBottom_toTopOf="@+id/cardViewctestpa"
        app:layout_constraintEnd_toEndOf="@+id/cardViewctestpa"
        app:layout_constraintStart_toStartOf="@+id/cardViewctestpa"
        app:layout_constraintTop_toBottomOf="@+id/cardViewctesp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="20dp"
        android:text="Qualificações "
        app:layout_constraintBottom_toTopOf="@+id/cardViewlicen"
        app:layout_constraintEnd_toEndOf="@+id/cardViewlicen"
        app:layout_constraintStart_toStartOf="@+id/cardViewlicen"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Resto do layout -->

</androidx.constraintlayout.widget.ConstraintLayout>
